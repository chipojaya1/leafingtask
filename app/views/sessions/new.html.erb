<p id="notice"><%= notice %></p>
<h1 class="center">Login!</h1>
<br>
<%= form_with(scope: :session, local: true) do |f| %>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, class:"form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "login" , class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<hr>
<div class="text-center">
  Don't have an account?<%= link_to 'Create account', new_user_path, class:"btn btn-info btn-lg" %>
</div>
