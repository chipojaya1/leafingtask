      <br>
      <p><%= form.password_field :password, placeholder: 'password', class: "field" %></p>
      <br>
      <div class="row">
        <div class="col-xs-12 form-btn">
        <%= form.submit "Login" %>
        </div>
      </div>
    <% end %>
