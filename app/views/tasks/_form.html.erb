<div class="container">
<%= form_with(model: @task, local: true) do |form| %>
<% if @task.errors.any? %>
  <div class="bg-danger text-white">
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li>ãƒ»<%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <p class="text-left">
    <%= form.text_field :title, placeholder: 'Task Name' %>
    <%= form.text_field :content, placeholder: 'Task Details' %>
    <%= form.date_field :duedate, placeholder: 'Deadline' %>
    <%= form.select :status, ['pending','started','completed'], placeholder: 'Status' %>
    <%= form.select :priority,['low','medium','high'], placeholder: 'Priority' %>
    <%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
    <%= form.submit "Submit", class:"btn btn-primary" %>
    </p>
  </div>
<% end %>
</div>
