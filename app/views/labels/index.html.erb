<div class="container">
  <div class="card p-5">
<p id="notice"><%= notice %></p>

<h1 class="mb-5">Labels</h1>

<span class="mb-4"><%= link_to 'New Label', new_label_path, class: "btn btn-primary" %></span>

<table class="text-md-left table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= link_to 'Show', label, class: "btn btn-warning" %></td>
        <td><%= link_to 'Edit', edit_label_path(label), class: "btn btn-info" %></td>
        <td><%= button_to 'Delete', label_path(label.id), :method=>:delete, :class=>:destroy, class:"btn btn-danger btn-lg" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
</div>
</div>
