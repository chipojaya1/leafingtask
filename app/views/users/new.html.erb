<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% @user.errors.full_messages.each do |message|%>
        <li><%= message %></li>
        <% end %>
    </ul>
  </div>
<% end %>
<br>

<div class="row">
  <div class="col-xs-4 col-xs-push-4 form">
    <h1>Sign up for Everleaf</h1>
    <p>Check out your Tasks Schedule</p>
    <%= form_with(model: @user, local: true) do |form|%>
      <p><%= form.text_field :name, placeholder: 'name', class: "field" %></p>
      <br>
      <p><%= form.email_field :email, placeholder: 'email', class: "field" %></p>
      <br>
      <p><%= form.password_field :password, placeholder: 'password', class: "field" %></p>
      <br>
      <p><%= form.password_field :password_confirmation, placeholder: 'password_confirmation', class: "field" %></p>
      <br>
      <div class="row">
        <div class="col-xs-12 form-btn">
          <%= form.submit "Create account" %>
        </div>
      </div>
    <% end %>
    <hr>
    <h2>Already have an accountï¼Ÿ<%= link_to 'Login', new_session_path, class: 'btn btn-warning' %></h2>
  </div>

