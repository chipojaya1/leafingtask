<!DOCTYPE html>
<html>
  <head>
    <title>EverleafApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"  %>
    <%= stylesheet_link_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" %>
  </head>

  <body>
    <% flash.each do |message_type, message| %>
    <%= message %>
    <% end %>

    <%= yield %>
  </body>

  <body>
    <nav class="navbar navbar-dark bg-primary">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">Everleaf</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Tasks</a>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Add New', new_task_path %></li>
            <li><%= link_to 'All tasks', tasks_path %></li>
          </ul>
        </div>
      </div>
    </nav>

   <% if logged_in? %>
     <%= link_to "Profile", user_path(current_user.id) %>
     <%= link_to "Logout", session_path(current_user.id), method: :delete %>
   <% else %>
     <%= link_to "Sign up", new_user_path %>
     <%= link_to "Login", new_session_path %>
   <% end %>

   <% flash.each do |message_type, message| %>
    <%= message %>
   <% end %>

   <%= yield %>
  </body>
  <br>
  <footer>
    <p>Â© 2020 Copyright Chipo's EverleafApp</p>
  </footer>
</html>
