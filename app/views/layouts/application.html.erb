<!DOCTYPE html>
<html>
  <head>
    <title>EverleafApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"  %>
    <%= stylesheet_link_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" %>
  </head>

  <body>
    <nav class="navbar navbar-dark">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">Everleaf</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% if logged_in? %>
              <% if current_user %>
                <li><%= link_to "Profile", user_path(current_user.id), class: 'btn btn-warning' %></li>
                <li><%= link_to "All tasks", tasks_path, class: 'btn btn-info' %></li>
                <% if current_user.admin? %>
                  <li><%= link_to "Admin", admin_users_path %></li>
                <% end %>
                <li><%= button_to "Logout", session_path(current_user.id), :method=>:delete, :class=>:destroy, class:"btn btn-danger btn-lg" %></li>
              <% else %>
                <li><%= link_to "Login", new_session_path, class: 'btn btn-danger'  %></li>
                <li><%= link_to "Sign up", new_admin_user_path(user), class: 'btn btn-warning' %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% flash.each do |key, value| %>
     <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
   <%= yield %>
  </body>
  <br>
  <footer>
    <p>Â© 2020 Copyright Chipo's EverleafApp</p>
  </footer>
</html>
